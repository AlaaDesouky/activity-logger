generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id          String   @id @default(cuid())
  object      String
  actorId     String @map(name:"actor_id")
  actor       Actor    @relation(fields: [actorId], references: [id])
  actionId    String @map(name:"action_id")
  action      Action   @relation(fields: [actionId], references: [id])
  targetId    String @map(name:"target_id")
  target      Target   @relation(fields: [targetId], references: [id])
  group String
  location    String
  occurredAt  DateTime @default(now()) @map(name: "occurred_at")
  metadata    Json?
}

model Actor {
  id          String   @id @default(cuid())
  name        String
  events      Event[]  
}

model Action {
  id          String   @id @default(cuid())
  object      String
  name        String
  events      Event[]  
}

model Target {
  id          String   @id @default(cuid())
  name        String
  events      Event[]  
}